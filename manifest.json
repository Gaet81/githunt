{
  "manifest_version": 2,
  "name": "GithuntFF",
  "short_name": "Githunt",
  "description": "Replace the new tab with a list of trending repositories on github belonging to any technology that you chose.",
  "version": "0.1",
  "applications": {
      "gecko": {
        "id": "GithuntFF@Gat81",
        "strict_min_version": "42.0",
        "strict_max_version": "50.*"
      }
    },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "*://*.github.com/*"
  ],
  "icons": {
    "16": "assets/img/icon16.png",
    "48": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "githunt.html"
  },
  "homepage_url": "https://github.com/Gaet81/githunt",
  "options_ui": {
    "page":"options.html"
  },
  "background": {
    "scripts": ["assets/js/background.js"]
  },
  "browser_action": {
    "default_title": "Githunt",
    "default-icon": {
      "16": "assets/img/icon16.png",
      "32": "assets/img/icon48.png",
      "128": "assets/img/icon128.png"
    }
  }
}
